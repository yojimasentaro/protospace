- if user_signed_in?
  - if @prototype.like_user(current_user.id)
    = button_to prototype_like_path(id: @prototype.like_user(current_user), user_id: current_user, prototype_id: @prototype.id), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      %span.num
      = @prototype.likes_count
  - else
    = button_to prototype_likes_path(@prototype), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
      = @prototype.likes_count
- else
  = button_to new_user_session_path, class: "btn btn-default" do
    = image_tag("icon_heart.svg")
    Like
    %span.num
      = @prototype.likes_count
