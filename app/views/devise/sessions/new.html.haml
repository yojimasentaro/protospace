.container
  .form-signin
    %h2.form-signin-heading Please sign in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
      = devise_error_messages!
      = f.label :email
      = f.email_field :email, placeholder: "Email adress", autofocus: true, required: true, class: "form-control"
      = f.label :password
      = f.password_field :password, placeholder: "Password", required: true, class: "form-control"
      .checkbox
        %label
          = f.check_box :remember_me
          = f.label :remember_me
      = f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path
