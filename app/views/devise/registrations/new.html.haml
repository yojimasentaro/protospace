.container.user-new{ action: "" }
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: "Username"
            .user-image.col-md-2.js-preview-images
              = f.button "Add Image", class: "btn btn-primary"
              = f.file_field :avatar
          .user-email
            = f.email_field :email, placeholder: "E-Mail"
          .user-password
            = f.password_field :password, placeholder: "Password", class: "user-password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
